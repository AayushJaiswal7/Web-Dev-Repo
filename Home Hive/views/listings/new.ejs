<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
      <form action="/listings" method="post">
        <div class="mb-3">
          <lable for="title" class="form-label"> Title</lable>
          <input
            name="listing[title]"
            placeholder="add a funky title "
            type="text"
            class="form-control"
          />
        </div>
        <br /><br />
        <div class="mb-3">
          <lable for="description" class="form-label"> Description</lable>
          <textarea
            name="listing[description]"
            placeholder=" enter description"
            type="text"
            class="form-control"
          ></textarea>
        </div>
        <br /><br />
        <div class="mb-3">
          <lable for="image" class="form-label">Image Link</lable>
          <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="text"
            class="form-control"
          />
        </div>

        <br /><br />
        <div class="row">
          <div class="mb-3 col-4">
            <lable for="price" class="form-label">Price </lable>
            <input
              name="listing[price]"
              placeholder="1200"
              type="number"
              class="form-control"
            />
          </div>
          <br /><br />
          <div class="mb-3 col-8">
            <lable for="country" class="form-label"> Country</lable>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
            />
          </div>
        </div>
        <br /><br />
        <div class="mb-3">
          <lable for="location" class="form-label"> Location</lable>
          <input
            name="listing[location]"
            placeholder="Bengaluru, Mysore"
            type="text"
            class="form-control"
          />
        </div>
        <br /><br />
        <button class="btn btn-dark add-btn">Add</button>
      </form>
    </div>
  </div>
</body>
